<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.endorphinapps.kemikal.hangman.SplashScreen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:shadowColor="#000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="24"
            android:text="HANGMAN"
            android:textColor="@color/red"
            android:textSize="64sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:adjustViewBounds="true"
            android:src="@drawable/hangman_6"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/original_game"
            style="@style/btn_splashscreen"
            android:background="@color/pink"
            android:text="Original" />

        <Button
            android:id="@+id/timed_game"
            style="@style/btn_splashscreen"
            android:background="@color/teal"
            android:text="Timed" />

        <Button
            android:id="@+id/word_length"
            style="@style/btn_splashscreen"
            android:background="@color/amber"
            android:text="Word by Length" />

    </LinearLayout>

    <!--Nav Drawer ListView-->
    <ListView
        android:id="@+id/listView"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff"
        android:choiceMode="singleChoice" />
</android.support.v4.widget.DrawerLayout>
